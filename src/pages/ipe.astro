---
// import FaqIpe from "../components/plataforma-ipe/FaqIpe.astro";
import BaseButton from "../components/shared/BaseButton.astro";
import ButtonShared from "../components/shared/Button.astro";
import CallToAction from "../components/shared/CallToAction.astro";
import Depoimentos from "../components/shared/Depoimentos.astro";
import HeroShared from "../components/shared/HeroShared.astro";
import Bandeirola from "../components/shared/Bandeirola.astro";
import BeneficioProduto from "../components/shared/BeneficioProduto.astro";
import BaseFaq from "../components/shared/BaseFaq.astro";
import { baseURL } from "../config";
import Layout from '../layouts/Layout.astro';

const bandeirolas = [
  {
    icone: `${baseURL}/img/shared/icones/qualificacao-telefone.png`,
    texto: "Qualificação de telefone",
    tema: "black",
    customClass: 'mx-auto col-span-3 col-start-2',
  },
  {
    icone: `${baseURL}/img/shared/icones/modelos-de-atribuicao.png`,
    texto: "Modelos de atribuição",
    tema: "blue",
    customClass: 'mx-auto col-span-3 col-start-4 row-start-2' 
  },
  {
    icone: `${baseURL}/img/shared/icones/enriquecimentos-distintos.png`,
    texto: "Enriquecimentos distintos",
    tema: "black",
    customClass: 'mx-auto col-span-3 col-start-5 xl:col-start-7 row-start-3'
  },    
  {
    icone: `${baseURL}/img/shared/icones/layouts-personalizados.png`,
    texto: "Layouts personalizados",
    tema: "purple",
    customClass: 'mx-auto col-span-3 col-start-9 row-start-1'
  },      
  {
    icone: `${baseURL}/img/shared/icones/layouts-prontos.png`,
    texto: "Layouts prontos",
    tema: "green",
    customClass: 'mx-auto col-span-2 col-start-11 row-start-3 last-badeirola-ipe'
  },        
]

//Data 
import { faqPrinciapaisBeneficios } from "../data/faq-principais-beneficios.js";

const beneficiosIpe = [
  {
    titulo: "Layouts personalizados para impulsionar suas campanhas",
    descricao: "Ajuste campos com dados despadronizados ou desatualizados para garantir que suas campanhas alcancem as pessoas certas, otimizando o custo por contato (CPC) e melhorando seus resultados.",
    imagem: {
      url: `${baseURL}/img/plataforma-ipe/beneficios/beneficio-1.png`,
      alt: "Descrição imagem 1"
    },
    tituloLista: "Benefícios principais:",
    lista: [
      "Eliminação de contatos desatualizados",
      "Alcance das pessoas certas",
      "Redução de custos com mais eficiência",
      "Descoberta de insights"
    ],
    customClasses: {
      'container': '!py-2',
      'content-container': 'px-12 py-6 lg:py-24 bg-grey-surface '
    }
  }, 

  {
    titulo: "Automatize Processos com Inteligência Operacional",
    descricao: "Automatize processos e tome decisões mais informadas. Com dados claros, como vínculos familiares e renda, ajuste suas estratégias rapidamente e otimize recursos para melhorar suas operações diárias.",
    imagem: {
      url: `${baseURL}/img/plataforma-ipe/beneficios/beneficio-2.png`,
      alt: "Descrição imagem 2"
    },
    tituloLista: "Benefícios principais:",
    lista: [
      "Automação de processos",
      "Visualização clara de dados importantes",
      "Ajustes rápidos para otimização de recursos",
      "Integração com as principais plataformas de troca segura de arquivos"
    ],
    customClasses: {
      'container': '!py-2',
      'content-container': 'px-12 py-6 lg:py-24 bg-grey-surface ',
    }
  },
  
  {
    titulo: "Maximize Eficiência com Dados Precisos e Relevantes",
    descricao: "Maximize o impacto de suas campanhas com dados precisos. Arraste e solte arquivos para enriquecer seus dados de forma rápida. Personalize layouts e acelere suas operações com informações organizadas e relevantes.",
    imagem: {
      url: `${baseURL}/img/plataforma-ipe/beneficios/beneficio-3.png`,
      alt: "Descrição imagem 3"
    },
    tituloLista: "Benefícios principais:",
    lista: [
      "Enriquecimento de dados em poucos cliques",
      "Personalização de layouts",
      "Otimização de campanhas com dados precisos"
    ],
    customClasses: {
      'container': '!py-2',
      'content-container': 'px-12 py-6 lg:py-24 bg-grey-surface '
    }
  },  
]
---

<Layout title="Plataforma IPE - Nova Vida TI" headerTheme="white">

    <HeroShared 
      item={{
          bgDesktop: `${baseURL}/img/plataforma-ipe/banner.png`,
          bgMobile: `${baseURL}/img/plataforma-ipe/banner-mobile.png`,
          minHeightDesktop: "650px",
          minHeightMobile: "735px"
      }}
    >
        <div class="col-span-5 pb-14 flex flex-col justify-end lg:justify-start items-start">
            <h1 class="hero-title mt-24">
              Plataforma Ipe <br class='hidden lg:inline'>consulta em lote
            </h1>              
            <p class="mt-5 lg:mt-11 text-sm lg:text-base">
              A solução mais rápida e automatizada para o enriquecimento e higienização de dados em lote, proporcionando economia de tempo e custos, além de garantir que suas operações diárias sejam sempre baseadas nos melhores dados disponíveis.
            </p>              

            <BaseButton classList="mt-16" />

        </div>  
    </HeroShared>  

    <!-- Como Fazemos -->
    <div class="content-row  text-black">
        <div class="content-container lg:grid grid-cols-12 lg:pt-20 pt-10">
          <div class="col-span-4">
            <h2 class="text-4xl section-highlight-title text-highlight-on-light">É assim que fazemos</h2>
          </div>
          <div class="col-span-6 col-start-7 text-neutral" data-animation='from-bottom'>
            <p class="text-lg">A criação de layouts personalizados permite desenvolver modelos de dados excepcionais, altamente estáveis e adaptados às suas necessidades, garantindo melhor performance.</p>
          </div>
          <div class="col-span-12">
            <div class="md:grid grid-cols-12 auto-rows-[40px] gap-y-20 py-10 pb-14   md:py-20 md:pb-28 space-y-5 md:space-y-0">
      
                {
      
                  bandeirolas.map(bandeirola => {
                    return (
                      <Bandeirola item={bandeirola} data-animation='from-bottom' />
                    )
                  })
                }
      
            </div>
      
      
          </div>
          <div class="col-span-12 pb-20  border-b border-neutral border-opacity-50">
            <p class="section-highlight-title text-highlight-on-light">Pare de perder tempo com dados desatualizados ou incorretos. Com a Plataforma Ipê, sua empresa obtém inteligência dados em suas operações diárias de forma ágil e eficiente.</p>
          </div>
        </div>
      </div>
    <!-- / Como Fazemos -->
    
    <!-- Principais Beneficios -->
    <div class="content-row  text-black pt-20">
        <div class="content-container lg:grid grid-cols-12 space-y-8 md:space-y-0">
          <div class="col-span-3">
            <small class="flex items-center gap-2 text-neutral mb-6 text-base">Principais benefícios <i class="icon-curved-arrow relative top-1"></i></small>
            <p>Vantagens que Impulsionam Suas Operações com Dados Precisos e Processos Eficientes.</p>
          </div>
          <div class="col-span-7 col-start-6">
            <!-- <FaqIpe questoes={faqPrinciapaisBeneficios} /> -->
            <BaseFaq questoes={faqPrinciapaisBeneficios} variant="numbered"  classList="faq-numerada"  />
          </div>
      
        </div>
    </div>
    <!-- / Principais Beneficios -->

    <ButtonShared
        text="Fale com um de nossos especialistas " 
        href="#"
    />

    <HeroShared 
      item={{
          bgDesktop: `${baseURL}/img/plataforma-ipe/banner-intermediario-desktop.png`,
          bgMobile: `${baseURL}/img/plataforma-ipe/banner-intermediario-mobile.png`,
          minHeightDesktop: "655px",
          minHeightMobile: "565px"
      }}
  >
        <div class="col-span-4 col-start-9 flex flex-col justify-end pb-12 lg:pb-0 lg:justify-center">
            <h1 class="font-light text-[24px] lg:text-[28px] leading-[1.3] lg:mb-40">
              Não deixe sua operação ser prejudicada por dados de baixa qualidade.
            </h1>              
        </div>  
    </HeroShared>     

    <div class="content-row  text-black">
      <div class="content-container px-5 relative">
        <div class="image-wrapper">
          <img src=`${baseURL}/img/plataforma-ipe/banner-intermediario.png` alt="">
        </div>

        <div class="lg:grid grid-cols-12 lg:absolute inset-0 px-0 lg:px-14 text-black lg:text-white">
            <div class="col-span-4 col-start-9 py-8">
                <h1 class="text-3xl font-light leading-tight lg:mt-52">
                  Não deixe sua operação ser prejudicada por dados de baixa qualidade.
                </h1>      
            </div>
        </div>
      </div>
    </div>

    <!-- Beneficios -->
    {
        beneficiosIpe.map((beneficio) => {
          return (
            <BeneficioProduto item={beneficio} data-animation="beneficios" />
          )
        })
      
      }
    <!-- / Beneficios -->

    <!-- Depoimentos -->
    <Depoimentos />
    <!-- / Depoimentos -->

  
    <CallToAction
        customClasses={"mt:10 lg:mt-20"}
        info={{
        titulo: "Aumente a eficiência e o valor do seu banco de dados ",
        descricao: "Não deixe sua operação ser prejudicada por dados de baixa qualidade. Com a Plataforma Ipê, você tem as melhores informações ao seu alcance, ranqueadas por nossos especialistas.",
        textButton: 'Entre em Contato',
        url: "/#",
        imagem: {
        url: `${baseURL}/img/plataforma-ipe/call-to-action/imagem-call-to-action.png`,
        alt: "Texto alternativo imagem"
        }
    }} />

</Layout>