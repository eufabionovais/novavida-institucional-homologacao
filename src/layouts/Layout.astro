---
const { title } = Astro.props;
import MainFooter from "../components/shared/MainFooter.astro";
import AppHeader from "../components/shared/AppHeader.astro";
import { baseURL } from "../config";


import "../../public/font-icons/style.css";
import "../css/global.css";
import "../css/tailwind.css";

const { customClasses = '', pageName = '' } = Astro.props;

---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/x-icon" href=`${baseURL}/favicon.ico` />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="/vendors/swiper/swiper-bundle.min.css">

		<title>{title}</title>

	</head>
	<body data-page={pageName}>

		<AppHeader classList={customClasses}  />

		<main>
			<slot />
		</main>
		<MainFooter />

		<script src=`${baseURL}/vendors/jquery/jquery-3.7.1.min.js` is:inline></script>
		<script src=`${baseURL}/vendors/swiper//swiper-bundle.min.js` is:inline></script>
		<script src=`${baseURL}/vendors/gsap/gsap.min.js` is:inline></script>
		<script src=`${baseURL}/vendors/gsap/ScrollTrigger.min.js` is:inline></script>
		<script src=`${baseURL}/vendors/gsap/ScrollToPlugin.min.js` is:inline></script>
		<script src=`${baseURL}/js/plugins/split-text.js` is:inline></script>
		<script src=`${baseURL}/js/animations.js` is:inline></script>
		<script src=`${baseURL}/js/nv-scripts.js` is:inline type="module"></script>

	</body>
</html>

