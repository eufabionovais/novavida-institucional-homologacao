---
const {submenus} = Astro.props;
import { baseURL } from "../../config";
---

{
  submenus.map((submenu) => {
    return (

      <div class="flex flex-col gap-y-4"> 
        
        <p class:list={['text-neutral px-4 mb-4 flex items-center gap-2', {'invisible': !submenu.titulo} ]}>{submenu.titulo} <i class="icon-curved-arrow relative top-1"></i></p>
        {


          submenu.itens.map((subMenuItem) => {
            return (
              <a href={`${baseURL}${subMenuItem.path}`} class="menu-item">
                <span class="menu-item__icone">
                  <img src={`${baseURL}${subMenuItem.icone}`} alt="">
                </span>
                <div class="menu-item__info">
                  <p class="menu-item__titulo text-black">{subMenuItem.titulo}</p>
                  <p class="menu-item__descricao">
                    {subMenuItem.descricao} 
                  </p>
                </div>
              </a>
            )
          })  
        }

      </div>

    )
  })
}


<style lang="scss">

  .menu-item {
    padding: 18px 16px;
    width: 100%;
    margin: 0;
    @apply bg-white flex gap-4 rounded-lg duration-300 items-start;

    &:hover {
      @apply bg-black bg-opacity-5;
    }    
  }

  .menu-item__icone {
    min-width: 40px;
    height: 40px;
    background-color: #BDE1FA;
    @apply rounded-lg flex items-center justify-center; 
  }

  .menu-item__titulo {
    @apply font-medium;
  }

  .menu-item__descricao {
    @apply  text-sm text-neutral;
  }

</style>